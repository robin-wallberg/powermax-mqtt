{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "outDir": "dist",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
